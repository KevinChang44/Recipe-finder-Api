{
  "devDependencies": {
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.19"
  },
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "watch:css": "tailwindcss -i ./input.css -o ./output.css --watch",
    "serve": "live-server --watch=."
  }
}
